datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")  // coloque a sua string de conex√£o no .env
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  email      String   @unique
  password   String
  role       String
  createdAt  DateTime
  lastLogin  DateTime?
  isBlocked  Boolean
}

model RefreshToken {
  id        String   @id
  userId    String
  token     String   @db.Text
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@unique([token(length: 191)])
}


